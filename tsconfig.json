{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "Node",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "sourceMap": false,
        "removeComments": true
    },
    "include": [
        "src/**/*",
        "functions/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
